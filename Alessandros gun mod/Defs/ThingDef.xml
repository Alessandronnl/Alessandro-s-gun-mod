<?xml version="1.0" encoding="utf-8"?>

<!-- Type 99 rifle Arisaka -->
  <ThingDef ParentName="BaseHumanMakeableGun_CE">
    <defName>CE_Gun_rifle Arisaka</defName>
    <label>Type 99 rifle Arisaka</label>
    <description></description>
    <graphicData>
      <texPath>Things/BoltActionRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <SightsEfficiency>1.0</SightsEfficiency>
      <ShotSpread>0.02</ShotSpread>
      <SwayFactor>1.40</SwayFactor>
      <Bulk>9.50</Bulk>
      <Mass>3.90</Mass>
      <RangedWeapon_Cooldown>1.38</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <Wood>60</Wood>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AmmoSet_77x58mmArisaka</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>70</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>5</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_77x58mmArisaka</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiUseBurstMode>FALSE</aiUseBurstMode>
        <aiAimMode>AimedShot</aiAimMode>
      </li>
    </comps>
    <weaponTags>
      <li>SniperRifle</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
      <tools>
        <li Class="CombatExtended.ToolCE">
          <label>Bayonet</label>
          <capacities>
            <li>Stab</li>
          </capacities>
          <power>14</power>
          <cooldownTime>1.5</cooldownTime>
          <armorPenetration>0.3</armorPenetration>
          <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
        </li>
      </tools>
  </ThingDef>

